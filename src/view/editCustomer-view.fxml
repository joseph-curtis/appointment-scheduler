<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <MenuBar>
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" onAction="#onActionExitApplication" text="Exit" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
               <items>
                  <MenuItem fx:id="settingsMenuItem" mnemonicParsing="false" onAction="#onActionOpenSettings" text="Settings" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" onAction="#onActionShowAbout" text="About Acme Scheduler" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <BorderPane>
         <center>
            <GridPane hgap="10.0" vgap="10.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="-Infinity" />
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="100.0" prefWidth="200.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TextField fx:id="idTxt" disable="true" editable="false" GridPane.columnIndex="1" />
                  <TextField fx:id="nameTxt" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="addressTxt" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="postCodeTxt" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <TextField fx:id="phoneTxt" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <ComboBox fx:id="divisionComboBox" maxWidth="-Infinity" onAction="#onActionListDivisions" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <ComboBox fx:id="countryComboBox" maxWidth="-Infinity" onAction="#onActionListCountries" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                  <Label text="Customer ID" />
                  <Label text="Name" GridPane.rowIndex="1" />
                  <Label text="Address" GridPane.rowIndex="2" />
                  <Label text="Postal Code" GridPane.rowIndex="3" />
                  <Label text="Phone Number" GridPane.rowIndex="4" />
                  <Label text="First-Level Division" GridPane.rowIndex="5" />
                  <Label text="Country" GridPane.rowIndex="6" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </BorderPane.margin>
            </GridPane>
         </center>
         <top>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="currentOperationLabel" text="Add Customer" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </HBox>
         </top>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </BorderPane>
      <HBox alignment="CENTER_RIGHT" spacing="25.0">
         <children>
            <Button fx:id="saveCustomerBtn" mnemonicParsing="false" onAction="#onActionSaveCustomer" prefHeight="30.0" prefWidth="55.0" text="Save" />
            <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#onActionCancel" prefHeight="30.0" prefWidth="55.0" text="Cancel" />
         </children>
         <VBox.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
